{
  "manifest_version": 3,
  "name": "Voice Transcriber",
  "version": "1.0.0",
  "description": "Real-time voice transcription with auto-insert.",

  "action": {
    "default_popup": "index.html",
    "default_title": "Voice Transcriber"
  },
  "permissions": ["activeTab", "scripting", "clipboardWrite"],

  "host_permissions": ["ws://localhost:8000/*"],

  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
